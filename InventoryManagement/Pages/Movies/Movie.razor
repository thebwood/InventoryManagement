@page "/movies/{MovieId:int}"

<h3>Movie</h3>

<EditForm Model="_movie">

    <div class="row">
        <div class="col-6">
            <MatStringField @bind-Value="@_movie.Title" Label="Title"></MatStringField>
        </div>
        <div class="col-6">
            <MatDatePicker @bind-Value="_movie.ReleaseDate" Label="Release Date" TValue="DateTime?"></MatDatePicker>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-12">
            <MatTextField @bind-Value="@_movie.Description" Label="Description" TextArea="true" FullWidth="true"></MatTextField>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-6">
            <MatTextField TValue="int?" @bind-Value="@_movie.Hours" Label="Hours"></MatTextField>
        </div>
        <div class="col-6">
            <MatTextField TValue="int?" @bind-Value="@_movie.Minutes" Label="Minutes"></MatTextField>
        </div>
    </div>
    <div>
        <MatButton OnClick="@SaveMovieAsync" Icon="save"></MatButton>
    </div>
</EditForm>