@inherits CommonInventoryFunctions

<MatCard>
    <MatCardContent Class="gameSearch">


        <div class="row">
            <div class="col-3">
                <MatNumericUpDownField Label="ID" TValue="long?"
                                       DecimalPlaces=0
                                       @bind-Value=@_searchModel.Id>
                </MatNumericUpDownField>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <MatStringField FullWidth="true" @bind-Value="@_searchModel.Description" Label="Description"></MatStringField>
            </div>
        </div>
        <div class="row">
            <div class="col-3 text-left">
                <MatSelect Label="Rating" @bind-Value="_searchModel.ItemTypeId" TValue="int?">
                    <MatOption TValue="int?" Value="null"></MatOption>
                    @foreach (var record in _itemTypes)
                    {
                        <MatOption TValue="int?" Value="@record.Id">@record.ItemType</MatOption>
                    }
                </MatSelect>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-12 text-right">
                <MatButton Raised="true" OnClick="@SearchInventory" Label="Search" Icon="search"></MatButton>
                <MatButton Type="button" OnClick="@ResetSearch" Label="Reset" Icon="clear"></MatButton>
            </div>
        </div>
    </MatCardContent>
</MatCard>
<style>
    .gameSearch {
        padding: 1%;
    }
</style>